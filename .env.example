# Email Configuration
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password-here
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Target Email Settings (comma-separated for multiple senders)
TARGET_SENDERS=sender1@example.com,sender2@example.com
TARGET_SUBJECT=Company Report

# Cron Schedule (cron expression format)
# Default: Every 2 minutes = */2 * * * *
# Examples:
#   */2 * * * * = Every 2 minutes
#   */5 * * * * = Every 5 minutes
#   0 * * * *   = Every hour
#   0 9 * * *   = Every day at 9 AM
CRON_SCHEDULE=*/2 * * * *

# Server Configuration
PORT=3000

# Logging
LOG_LEVEL=info
