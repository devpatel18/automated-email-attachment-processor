# Example config - DO NOT COMMIT real secrets here
# Copy this to config/config.env and fill in real values locally

EMAIL_API_URL=https://api.sendgrid.com/v3/mail/send
EMAIL_API_KEY=REPLACE_ME_SENDGRID_KEY
EMAIL_API_SECRET=

EMAIL_ADDRESS=REPLACE_ME_EMAIL_ADDRESS
EMAIL_PASSWORD=REPLACE_ME_EMAIL_APP_PASSWORD
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

DATASTORE_TYPE=GCS
DATASTORE_PROJECT_ID=REPLACE_ME_GCP_PROJECT
DATASTORE_CREDENTIALS_FILE=/path/to/your/gcs-credentials.json
DATASTORE_BUCKET=REPLACE_ME_BUCKET
DATASTORE_LOCATION=us

ATTACHMENT_TYPES=pdf,doc,docx,txt,csv,xlsx
MAX_ATTACHMENT_SIZE_MB=25
PROCESSING_BATCH_SIZE=50
MAX_WORKERS=4

LOG_LEVEL=INFO
LOG_FILE=/path/to/email_processor.log
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=30

NOTIFICATION_EMAIL=REPLACE_ME_NOTIFICATION_EMAIL
ENABLE_NOTIFICATIONS=true
